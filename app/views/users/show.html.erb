<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= @user.username %></h2>
  <h2><%= mail_to(@user.email) %></h2>
  <h2> Member since <%= @user.created_at.strftime("%B %Y") %> </h2>
    <div class="actions">
      <% if current_user?(@user) %>
        <%= link_to("Edit", edit_user_path(@user), class: "button edit")%>
      <% end %>
      <% if current_user_admin? %>
        <%= link_to("Delete", user_path(@user), class: "button delete", 
            data: { turbo_method: :delete, turbo_confirm: "Permanently delete your account?"})%>
      <% end %>
    <% if @reviews.present? %>
    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
      <div class="review">
        <div class="details">
          <span class="title">
            <%= link_to review.movie.title, review.movie %>
          </span>
          <%= pluralize(review.stars, 'star') %>
          <span class="date">
            <%= time_ago_in_words(review.created_at) %> ago
          </span>
          <p>
            <%= review.comment %>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
    </div>
</section>